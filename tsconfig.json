{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": false,
        "noLib": false,
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES6",        
        "moduleResolution": "node",
        "removeComments": false,
        "lib": ["es6"],
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]    
}